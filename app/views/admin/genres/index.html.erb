<% provide(:title, "タグ一覧") %>

<div class="container">
    <div class="row">
        <h4 class="red-border bg-light m-4">タグ一覧</h4>
    </div>
    <div class="row mt-4">
        <div class='col'>
            <%= form_with model: @genre, url: admin_genres_path, local:true do |f| %>
            <table>
              <tbody>
                  <tr>
                    <td class="text-dark" width="150">タグ名</td>
                    <td width="200"><%= f.text_field :name, placeholder: "タグ名" %></td>
                    <td><%= f.submit "新規登録", class:"btn btn-success" %></td>
                  </tr>
              </tbody>
            </table>
            <% end %>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-md-4">
            <table class="table table-hover table-inversey">
                <thead class="bg-light">
                    <tr>
                        <th class="text-dark">タグ</th>
                        <td></td>
                        <td></td>
                    </tr>
                </thead>
                <tbody>
                    <% @genres.each do |genre| %>
                        <tr>
                          <td><%= genre.name %></td>
                          <td><%= link_to "編集", edit_admin_genre_path(genre.id), class: "btn btn-sm btn-success" %></td>
                          <td><%= link_to "検索", genre_index_path(genre.id), class: "btn btn-sm btn-secondary" %></td>
                          <td><%= link_to "削除", admin_genre_path(genre.id), method: :delete, class: "btn btn-sm btn-danger" %></td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>
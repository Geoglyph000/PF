<% provide(:title, "タグの編集") %>

<div class="container">
  <div class="row">
    <h4 class="red-border bg-light m-4">タグ編集</h4>
  </div>
  <div class="row mt-4">
    <div class='col'>
      <%= form_with model:@genre, url:admin_genre_path(@genre.id), local:true do |f| %>
      <table>
        <tbody>
          <tr>
            <td class="text-dark" width="100">タグ名</td>
            <td width="200"><%= f.text_field :name %></td>
            <td><%= f.submit "変更を保存", class:"btn btn-success" %></td>
          </tr>
        </tbody>
      </table>
      <% end %>
    </div>
  </div>
</div>
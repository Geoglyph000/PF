<div class="container m-2 mx-auto">
 <div class="row">
  <h2><%= @date %>の記念日一覧</h2>
  <table class="table table-hover table-inverse">
   <thead>
    <tr>
     <th>記念日</th>
     <th>説明</th>
     <th>日付</th>
     </tr>
    </thead>

    <tbody>
     <% @posts.each do |post| %>
      <tr>
       <%= link_to post_path(post.id) do %>
        <td class="title"><%= post.title %></td>
        <td class="body"><%= post.body %></td>
        <td class="date"><%= l post.date %></td>
       <% end %>
      </tr>
     <% end %>
   </tbody>
  </table>
 </div>
</div>
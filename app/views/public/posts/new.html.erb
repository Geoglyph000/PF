<h1>記念日を登録</h1>

<% if @post.errors.any? %>
  <%= @post.errors.count %>件のエラーが発生しました</br>
  <% @post.errors.full_messages.each do |message| %>
    <%= message %></br>
  <% end %>
<% end %>

<%= form_with model:@post, local:true do |f| %>
  <h4>タイトル</h4>
  <%= f.text_field :title %>

  <h4>説明</h4>
  <%= f.text_area :body %>

   <h4>日付</h4>
  <%= f.date_field :date %>

  <%# ユーザIDの紐付け %>
  <%= f.hidden_field :user_id, :value => current_user.id %>

  <%= f.submit '作成' %>
<% end %>

<%= link_to "一覧に戻る", posts_path %>
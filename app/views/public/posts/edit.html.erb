<h1>記念日の編集</h1>
  <%= form_with model:@post, local: true do |f| %>
   <h4>タイトル</h4>
    <%= f.text_field :title %>

    <h4>説明</h4>
    <%= f.text_area :body %>

    <h4>日付</h4>
    <%= f.date_field :date %>

    <h4>公開設定</h4>
    <%= f.radio_button :is_private, false %>
    <%= f.label :is_private, "公開" %>
    <%= f.radio_button :is_private, true  %>
    <%= f.label :is_private, "非公開" %>

    <%= f.submit '更新' %>
  <% end %>
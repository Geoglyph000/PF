<h2>プロフィール編集</h2>
<%= form_with model:@user, local:true do |f| %>
  <label for="inputName">Name</label>
  <%= f.text_field :user_name, autofocus: true, id:"inputName", placeholder:"ユーザ名"%>

  <label for ="inputIntroduction">Introduction</label>
  <%= f.text_area :introduction, id: "inputintroduction", placeholder: "自己紹介" %>

  <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.png", size: '100x100'%>
  <label for="inputImage">ProfileImage</label>
  <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>

  <%= f.submit "変更を保存" %>
<% end %>

<%= link_to "戻る", user_path(@user.id) %>